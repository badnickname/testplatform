<!doctype html>
<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- CSS only -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>@ViewData["Title"]</title>
</head>
<body>
<div class = "container-lg header">
    <div class="row">
        <div class="col">
            <b><a href="../Home/Index">&gt;Онлайн-тестирование</a></b>
        </div>
        <div class="col-md-auto"></div>
        @{
            if (!ViewData.ContainsKey("HideBar"))
            {
                if (!ViewData.ContainsKey("Name") || ViewData["Name"] == null)
                {
                    <div class="col col-lg-3 d-flex justify-content-center align-items-center">
                        <a href="../Home/Login">Войти</a>&nbsp;|&nbsp;<a href="../Home/Register">Регистрация</a>
                    </div>
                }
                else
                {
                    <div class="col col-lg-3 d-flex justify-content-center align-items-center">
                        <b>@ViewData["Name"]:</b>&nbsp<a href="../User/Profile">Профиль</a>&nbsp|&nbsp;<a href="../Home/Logout">Выйти</a>
                    </div>
                }
            }
        }
    </div>
</div>


<div class="container-lg align-center">
    <div><br/></div>
    @RenderBody()
</div>

</body>
</html>